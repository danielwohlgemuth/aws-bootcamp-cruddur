#! /usr/bin/bash

LABEL="db-drop"

CYAN='\033[1;36m'
NO_COLOR='\033[0m'
printf "${CYAN}== ${LABEL}${NO_COLOR}\n"

if [ "$1" = "prod" ]; then
    echo "Running in production mode"
    URL=${PROD_CONNECTION_URL}
else
    URL=${CONNECTION_URL}
fi

NO_DB_CONNECTION_URL=$(sed 's/\(.*\)\/cruddur/\1/' <<< "${URL}")
psql ${NO_DB_CONNECTION_URL}/postgres -c "DROP DATABASE IF EXISTS cruddur;"