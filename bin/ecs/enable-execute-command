#! /usr/bin/bash

if [ -z "$1" ]; then
    echo "No SERVICE_NAME argument supplied eg ./bin/ecs/enable-execute-command backend-flask"
    exit 1
fi
SERVICE_NAME=$1

aws ecs update-service \
  --service $SERVICE_NAME \
  --cluster cruddur \
  --region $AWS_DEFAULT_REGION \
  --enable-execute-command \
  --force-new-deployment

